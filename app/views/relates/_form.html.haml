.container-fluid
  .row.justify-content-sm-center
    .col-sm-6
      = form_for @relate do |f|
        - if @relate.errors.any?
          #error_explanation
            %h2= "#{pluralize(@relate.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @relate.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.relates.type, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :type, options_for_type, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.relates.obj, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.text_field :obj, :class => "form-control"
          
      
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', relates_path, :class => "btn btn-danger"
