- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_template_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.templates.name
              %th 
                = Setting.templates.nest
              %th 
                = Setting.templates.image
              %th 
                = Setting.templates.index
              %th 
                = Setting.templates.new
              %th 
                = Setting.templates.edit
              %th 
                = Setting.templates.show
              %th 
                = Setting.templates.form
              %th 
                = Setting.templates.js
              %th 
                = Setting.templates.scss
              %th 
                = Setting.templates.admin
              %th
          %tbody
            - @templates.each_with_index do |template, index|
              %tr
                %td
                  = index+1
              
                %td
                  = template.name
                %td
                  = template.nest
                %td
                  = template.image
                %td
                  = template.index
                %td
                  = template.new
                %td
                  = template.edit
                %td
                  = template.show
                %td
                  = template.form
                %td
                  = template.js
                %td
                  = template.scss
                %td
                  = template.admin
                %td
                  = link_to "查看", template_path(template), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_template_path(template), :class => "btn btn-success btn-sm"
                  = link_to "生成", produce_template_path(template), :class => "btn btn-info btn-sm"
                  = link_to "删除", template, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
