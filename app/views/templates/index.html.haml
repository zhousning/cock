- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead
            %tr
              %th #
            
              %th 
                = Setting.templates.name
              %th 
                = Setting.templates.nest
              %th 
                = Setting.templates.image
              %th 
                = Setting.templates.index
              %th 
                = Setting.templates.new
              %th 
                = Setting.templates.edit
              %th 
                = Setting.templates.show
              %th 
                = Setting.templates.form
              %th 
                = Setting.templates.js
              %th 
                = Setting.templates.scss
              %th 
                = Setting.templates.admin
              %th
          %tbody
            - @templates.each_with_index do |template, index|
              %tr
                %td
                  = index+1
              
                %td
                  = template.name
                %td
                  = template.nest
                %td
                  = template.image
                %td
                  = template.index
                %td
                  = template.new
                %td
                  = template.edit
                %td
                  = template.show
                %td
                  = template.form
                %td
                  = template.js
                %td
                  = template.scss
                %td
                  = template.admin
                %td
                  = link_to template_path(template), :class => "text-muted" do
                    = fa_icon "search"
                  = link_to edit_template_path(template), :class => "text-muted" do
                    = fa_icon "edit"
                  = link_to template, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-muted" do
                    = fa_icon "trash"
                  = link_to produce_template_path(template) do
                    = fa_icon "wrench"

= render "layouts/control_panel"
