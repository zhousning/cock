.container-fluid
  .row
    %nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      .sidebar-sticky
        %ul.nav.flex-column
          %li.nav-item
          - if can? :index, Role 
            %li.nav-item
              = link_to roles_path, :class => "nav-link" do
                %span{"data-feather" => "file"}
                角色管理
        %h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
          %span Saved reports
          %a.d-flex.align-items-center.text-muted{:href => "#"}
            %span{"data-feather" => "plus-circle"}
        %ul.nav.flex-column.mb-2
          %li.nav-item
            %a.nav-link{:href => "#"}
              %span{"data-feather" => "file-text"}
              Current month
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3.bg-light{:role => "main"}
      - content_for :card_header do
        %h5
          = t(controller_name + "." + action_name + '.title')
          - if "#{action_name}" == Setting.systems.index 
            = link_to "/#{controller_name}/new", :class => "button button-border button-rounded button-primary pull-right " do
              = fa_icon "plus", text: Setting.systems.btn_new, right: false 
          - elsif "#{action_name}" == Setting.systems.new 
            = link_to "/#{controller_name}", :class => "button button-border button-rounded button-caution pull-right " do
              = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
          - elsif "#{action_name}" == Setting.systems.show
            = link_to "/#{controller_name}", :class => "button button-border button-rounded button-caution pull-right " do
              = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
            = link_to "#{request.url}/edit", :class => "button button-border button-rounded button-action pull-right  mr-3" do
              = fa_icon "edit", text: Setting.systems.btn_edit, right: false 
          - elsif "#{action_name}" == Setting.systems.edit
            = link_to "#{request.url}".sub("edit", ""), :class => "button button-border button-rounded button-caution pull-right " do
              = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        = yield :main_body 
      = render "layouts/bootstrap/card"
