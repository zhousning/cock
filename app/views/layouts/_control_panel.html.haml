.container-fluid
  .row
    %nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      .sidebar-sticky
        %ul.nav.flex-column
          %li.nav-item
            = link_to nil, :class => "nav-link" do
              %span{"data-feather" => "home"}
            -#
              = current_user.email
              %span.sr-only (current)
          %li.nav-item
          - if can? :index, Role 
            %li.nav-item
              = link_to roles_path, :class => "nav-link" do
                %span{"data-feather" => "file"}
                角色管理
          - if can? :index, User
            %li.nav-item
              = link_to users_path, :class => "nav-link" do
                %span{"data-feather" => "file"}
                用户管理
        %h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
          %span Saved reports
          %a.d-flex.align-items-center.text-muted{:href => "#"}
            %span{"data-feather" => "plus-circle"}
        %ul.nav.flex-column.mb-2
          %li.nav-item
            %a.nav-link{:href => "#"}
              %span{"data-feather" => "file-text"}
              Current month
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3.bg-light{:role => "main"}
      - content_for :card_header do
        %h5
          = t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}/new", :class => "pull-right text-secondary" do
            = fa_icon "file", text: "新建", right: false 


        -#
          = fa_icon "quote-left 4x", class: "text-muted pull-left"

          = content_tag(:li, fa_icon("dollar li", text: "Bulleted list item"))

          = fa_stacked_icon "dollar", base: "square-o", class: "text-primary"

          = fa_stacked_icon "dollar inverse", base: "circle", class: "fa-5x"

          = fa_stacked_icon "terminal inverse", base: "square", class: "pull-right", text: "Hi!"



      - content_for :card_body do
        = yield :main_body 
      = render "layouts/card"
